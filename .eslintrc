{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": "warn",
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "react/jsx-filename-extension": 0,
    "prettier/prettier": ["error"],
    "import/no-named-as-default": 0,
    "react/jsx-indent": 0,
    "no-else-return": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/no-unused-state": 0
  }
}
